default 1
color white/blue blue/white
splashimage /boot/grub/efa.xpm.gz
foreground 000000
background adadad

title		Live system:
root

title		EFA live
kernel		/live/vmlinuz-2.6.26-2-486 boot=live locale=de_DE.UTF-8 keyb=de persistent username=efa hostname=efa-live union=aufs
initrd		/live/initrd.img-2.6.26-2-486

title		EFA live (fail-safe mode)
kernel		/live/vmlinuz-2.6.26-2-486 boot=live locale=de_DE.UTF-8 keyb=de persistent username=efa hostname=efa-live union=aufs noapic noapm nodma nomce nolapic nosmp vga=normal
initrd		/live/initrd.img-2.6.26-2-486

title		Installer:
root

title       EFA GUI install
kernel      /install/gtk/vmlinuz video=vesa:ywrap,mtrr vga=788 quiet locale=de_DE.UTF-8 keyb=de  -- ${LH_BOOTAPPEND_LIVE}
initrd      /install/gtk/initrd.gz

title       EFA GUI install (expert)
kernel      /install/gtk/vmlinuz priority=low video=vesa:ywrap,mtrr vga=788 locale=de_DE.UTF-8 keyb=de  -- ${LH_BOOTAPPEND_LIVE}
initrd      /install/gtk/initrd.gz

title       EFA Text install
kernel      /install/vmlinuz vga=normal quiet locale=de_DE.UTF-8 keyb=de  -- ${LH_BOOTAPPEND_LIVE}
initrd      /install/initrd.gz

title       EFA Text install (expert)
kernel      /install/vmlinuz priority=low vga=normal locale=de_DE.UTF-8 keyb=de  -- ${LH_BOOTAPPEND_LIVE}
initrd      /install/initrd.gz

title		Other:
root

title		memtest86+
kernel		/live/memtest
